# ─────────────────────────────
# Core Service ID
# ─────────────────────────────
SERVICE_NAME=gateway

# ─────────────────────────────
# PostgreSQL
# ─────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ransomware_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/ransomware_db

# Use ONE unified DB URL — not 10 different names
INGESTION_DB_URL=${DATABASE_URL}
TRIAGE_DB_URL=${DATABASE_URL}
RESPONSE_DB_URL=${DATABASE_URL}
AUDIT_DB_URL=${DATABASE_URL}

# ─────────────────────────────
# Redis
# ─────────────────────────────
REDIS_URL=redis://redis:6379/0

# ─────────────────────────────
# JWT / SECURITY
# ─────────────────────────────
SECRET_KEY=CHANGE_THIS_TO_A_64_CHAR_STRING

# ─────────────────────────────
# External API Keys
# (Don’t commit these to GitHub)
# ─────────────────────────────
ABUSEIPDB_API_KEY=your_key
VIRUSTOTAL_API_KEY=your_key

# ─────────────────────────────
# RabbitMQ
# ─────────────────────────────
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# MUST match your code:
RABBITMQ_EXCHANGE=ransomware_events

# ─────────────────────────────
# CORS
# ─────────────────────────────
CORS_ORIGINS=["http://localhost:3000"]

# ─────────────────────────────
# Internal service URLs
# ─────────────────────────────
INGESTION_SERVICE_URL=http://ingestion_service:8001
TRIAGE_SERVICE_URL=http://triage_service:8002/api/v1/incidents
RESPONSE_SERVICE_URL=http://response_service:8003
AUDIT_SERVICE_URL=http://audit_service:8004
